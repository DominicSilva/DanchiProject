@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Edit", "Account", new { id = Danchi.Utils.SessionHelper.UserId })">
                    <i class="fas fa-user"></i>
                    @Danchi.Utils.SessionHelper.NombreCompleto
                </a>
            </li>
            <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()"><span>Cerrar Sesión</span></a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav navbar-right">
        <li>@Html.ActionLink("Iniciar Sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
