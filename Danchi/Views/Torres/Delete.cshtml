@model Danchi.Models.Torre

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Eliminar Torre";
}

<style>
    .torre-delete-container {
        max-width: 540px;
        margin: 2.5rem auto;
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 6px 32px #ebb3b370, 0 2px 14px #f8b6b938;
        padding: 2.3rem 1.7rem 2rem 1.7rem;
        text-align: center;
    }

    .torre-delete-title {
        color: #ce466d;
        font-size: 1.7rem;
        font-weight: 800;
        margin-bottom: 0.6rem;
    }

    .torre-delete-subtitle {
        color: #8a6d6d;
        font-size: 1.11rem;
        margin-bottom: 2.2rem;
    }

    .delete-dl {
        text-align: left;
        margin-bottom: 2.1rem;
    }

        .delete-dl dt {
            font-weight: 700;
            color: #ad7b7b;
            margin-top: 0.7rem;
        }

        .delete-dl dd {
            margin-bottom: 0.5rem;
            color: #7c7474;
            font-size: 1.05rem;
        }

    .btn-delete-torre {
        background: linear-gradient(45deg, #ff7b9b 60%, #ebb3b3 100%);
        color: #fff;
        font-weight: 700;
        padding: 0.72rem 2.1rem;
        border-radius: 1.1rem;
        border: none;
        font-size: 1.07rem;
        box-shadow: 0 2px 9px #ebb3b333;
        margin-right: 0.5rem;
        transition: background 0.2s;
    }

        .btn-delete-torre:hover {
            background: linear-gradient(45deg, #ce466d 70%, #ebb3b3 100%);
        }

    .back-link {
        color: #ad7b7b;
        font-weight: 600;
        text-decoration: none;
        margin-left: 1.1rem;
    }

        .back-link:hover {
            color: #ff7b9b;
            text-decoration: underline;
        }
</style>

<div class="torre-delete-container">
    <div class="torre-delete-title">¿Eliminar Torre?</div>
    <div class="torre-delete-subtitle">
        ¿Estás seguro que deseas eliminar esta torre?<br>
        <span style="color: #b35e5e;">Esta acción no se puede deshacer.</span>
    </div>

    <dl class="delete-dl">
        <dt>@Html.DisplayNameFor(model => model.NombreTorre)</dt>
        <dd>@Html.DisplayFor(model => model.NombreTorre)</dd>
        <dt>@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
        <dd>@Html.DisplayFor(model => model.FechaCreacion)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn-delete-torre">
            <i class="fas fa-trash-alt"></i> Eliminar
        </button>
        <a href="@Url.Action("Index", "Torres")" class="back-link"><i class="fas fa-arrow-left"></i> Volver al listado</a>
    }
</div>
