@model Danchi.Models.Torre

@{
    ViewBag.Title = "Nueva Torre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .torre-create-container {
        max-width: 560px;
        margin: 2.5rem auto;
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 6px 32px #ebb3b370, 0 2px 14px #f8b6b938;
        padding: 2.3rem 1.5rem 2rem 1.5rem;
        text-align: center;
    }

    .torre-create-title {
        color: #8a6d6d;
        font-size: 1.8rem;
        font-weight: 800;
        margin-bottom: 2rem;
        letter-spacing: 0.01em;
    }

    .form-group {
        text-align: left;
        margin-bottom: 1.6rem;
    }

    .form-label {
        font-weight: 700;
        color: #ad7b7b;
        margin-bottom: 0.5rem;
        display: block;
        font-size: 1.07rem;
    }

    .form-control {
        border-radius: 1.1rem;
        border: 1.5px solid #ead8e4;
        font-size: 1.09rem;
        padding: 0.95rem 1.2rem;
        background: #f9f8f8;
        color: #7c7474;
        width: 100%;
    }

        .form-control:focus {
            border-color: #ebb3b3;
            background: #fff;
            box-shadow: 0 2px 10px #ebb3b333;
        }

    .btn-torre-create {
        background: linear-gradient(45deg, #ff7b9b 60%, #ebb3b3 100%);
        color: #fff;
        font-weight: 700;
        padding: 0.72rem 2.1rem;
        border-radius: 1.1rem;
        border: none;
        font-size: 1.08rem;
        box-shadow: 0 2px 9px #ebb3b333;
        margin-top: 0.7rem;
        transition: background 0.2s;
    }

        .btn-torre-create:hover {
            background: linear-gradient(45deg, #ce466d 70%, #ebb3b3 100%);
        }

    .back-link {
        color: #ad7b7b;
        font-weight: 600;
        text-decoration: none;
        margin-top: 1.5rem;
        display: inline-block;
    }

        .back-link:hover {
            color: #ff7b9b;
            text-decoration: underline;
        }
</style>

<div class="torre-create-container">
    <div class="torre-create-title">Nueva Torre</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="form-label" for="NombreTorre">Nombre o Distinción Torre</label>
            @Html.EditorFor(model => model.NombreTorre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ej: Torre 1, Edificio Central..." } })
            @Html.ValidationMessageFor(model => model.NombreTorre, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn-torre-create">
            <i class="fas fa-plus"></i> Crear
        </button>
    }
    <br />
    <a href="@Url.Action("Index", "Torres")" class="back-link"><i class="fas fa-arrow-left"></i> Volver al listado</a>
</div>