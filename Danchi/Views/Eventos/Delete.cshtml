@model Danchi.Models.Evento

@{
    ViewBag.Title = "Eliminar Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .delete-evento-container {
        max-width: 600px;
        margin: 3rem auto;
        background: #fff;
        border-radius: 1.15rem;
        box-shadow: 0 8px 32px #ebb3b355, 0 2px 14px #ffb6b928;
        padding: 2.5rem 2rem 2rem 2rem;
    }

    .delete-evento-title {
        color: #7c7474;
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 0.7rem;
    }

    .delete-evento-subtitle {
        color: #8a6d6d;
        font-size: 1.17rem;
        margin-bottom: 1.7rem;
    }

    .delete-evento-dl dt {
        font-weight: 700;
        color: #ae3b62;
        margin-bottom: .2rem;
        font-size: 1.05rem;
    }

    .delete-evento-dl dd {
        color: #626262;
        margin-bottom: .7rem;
        font-size: 1.05rem;
        margin-left: 0;
    }

    .btn-eliminar-evento {
        background: linear-gradient(45deg, #ff7b9b 60%, #ffb6b9 100%);
        color: #fff;
        font-weight: 700;
        padding: 0.7rem 2rem;
        border-radius: 1.1rem;
        border: none;
        font-size: 1.07rem;
        box-shadow: 0 2px 9px #ffb6b933;
        margin-right: 0.8rem;
        transition: background 0.18s, box-shadow 0.18s;
    }

        .btn-eliminar-evento:hover {
            background: linear-gradient(45deg, #ae3b62 60%, #ffb6b9 100%);
        }

    .btn-cancelar {
        color: #ae3b62;
        font-weight: 700;
        text-decoration: none;
        margin-left: 0.5rem;
        transition: color 0.2s;
    }

        .btn-cancelar:hover {
            color: #ff7b9b;
            text-decoration: underline;
        }
</style>

<div class="delete-evento-container">
    <div class="delete-evento-title">Eliminar Evento</div>
    <div class="delete-evento-subtitle">¿Estás seguro que deseas eliminar este evento?</div>
    <div style="margin-bottom:1.6rem;font-size:1.04rem;">Evento</div>
    <dl class="delete-evento-dl">
        <dt>@Html.DisplayNameFor(model => model.Titulo)</dt>
        <dd>@Html.DisplayFor(model => model.Titulo)</dd>

        <dt>@Html.DisplayNameFor(model => model.Descripcion)</dt>
        <dd>@Html.DisplayFor(model => model.Descripcion)</dd>

        <dt>@Html.DisplayNameFor(model => model.FechaEvento)</dt>
        <dd>@Html.DisplayFor(model => model.FechaEvento)</dd>

        <dt>@Html.DisplayNameFor(model => model.HoraInicio)</dt>
        <dd>@Html.DisplayFor(model => model.HoraInicio)</dd>

        <dt>@Html.DisplayNameFor(model => model.HoraFin)</dt>
        <dd>@Html.DisplayFor(model => model.HoraFin)</dd>

        <dt>@Html.DisplayNameFor(model => model.Lugar)</dt>
        <dd>@Html.DisplayFor(model => model.Lugar)</dd>

        <dt>@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd>@Html.DisplayFor(model => model.Estado)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn-eliminar-evento"><i class="fas fa-trash-alt"></i> Eliminar</button>
        <a href="@Url.Action("Index", "Eventos")" class="btn-cancelar"><i class="fas fa-arrow-left"></i> Cancelar</a>
    }
</div>
