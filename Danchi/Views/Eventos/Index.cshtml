@model IEnumerable<Danchi.Models.Evento>

@{
    ViewBag.Title = "Eventos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: '¡Éxito!',
            text: @Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["SuccessMessage"].ToString(), true)),
            confirmButtonText: 'Aceptar',
            timer: 3000
        });
    </script>
}

<div class="text-center">
    <h2>Eventos</h2>
</div>

<div class="d-flex justify-content-between mb-3">
    <div>
        @Html.ActionLink("Nuevo Evento", "Create", null, new { @class = "btn btn-primary" })
    </div>
    @if (Danchi.Utils.SessionHelper.Rol == "Administrador")
    {
        <div>
            @Html.ActionLink("Exportar a PDF", "ExportarEventosPDF", "Eventos", null, new { @class = "btn btn-danger" })
        </div>
    }
</div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaEvento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoraInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoraFin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lugar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lugar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdEvento })
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdEvento })
            </td>
        </tr>
    }

</table>
