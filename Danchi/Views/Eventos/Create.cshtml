@model Danchi.Models.Evento

@{
    ViewBag.Title = "Crear Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
.evento-form-container {
    max-width: 650px;
    margin: 2.8rem auto 0 auto;
    background: #fff;
    border-radius: 1.15rem;
    box-shadow: 0 8px 32px #b9b6ec1a, 0 2px 12px #ffb6b928;
    padding: 2.2rem 2rem 2rem 2rem;
}
.evento-form-title {
    color: #7c7474;
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 2rem;
    letter-spacing: 0.01em;
}
.form-table {
    width: 100%;
    border-spacing: 0 0.5rem;
}
.form-table td {
    vertical-align: top;
    padding: 0.2rem 0.3rem;
}
.evento-form-label {
    font-weight: 600;
    color: #ae3b62;
    margin-bottom: 0.3rem;
    letter-spacing: 0.01em;
    display: block;
    min-width: 120px;
}
.evento-form-control, textarea {
    border-radius: 1.05rem !important;
    border: 1.5px solid #ead8e4 !important;
    font-size: 1.07rem;
    padding: 0.8rem 1.2rem !important;
    background: #f9f8f8 !important;
    color: #7c7474;
    margin-bottom: 0.4rem;
    width: 100%;
    box-sizing: border-box;
}
textarea.evento-form-control {
    min-height: 110px;
    resize: vertical;
}
.evento-form-control:focus, textarea:focus {
    border-color: #ffb6b9 !important;
    background: #fff !important;
    box-shadow: 0 2px 10px #ffb6b938;
}
.btn-crear-evento {
    background: linear-gradient(45deg, #ff7b9b 60%, #ffb6b9 100%);
    color: #fff;
    font-weight: 700;
    padding: 0.65rem 2.2rem;
    border-radius: 1.15rem;
    border: none;
    font-size: 1.09rem;
    box-shadow: 0 2px 9px #ffb6b933;
    transition: background 0.18s, box-shadow 0.18s;
    margin-top: 1rem;
}
.btn-crear-evento:hover {
    background: linear-gradient(45deg, #ae3b62 60%, #ffb6b9 100%);
    color: #fff;
}
@@media (max-width: 700px) {
    .evento-form-container { padding: 1.2rem 0.4rem; }
    .evento-form-title { font-size: 1.19rem;}
    .form-table, .form-table tr, .form-table td { display: block; width: 100%;}
    .evento-form-label { min-width: unset; }
}
</style>

<div class="evento-form-container">
    <div class="evento-form-title">Crear Evento</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table class="form-table">
            <tr>
                <td>
                    @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "evento-form-label" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "evento-form-control", placeholder = "Título del evento" } })
                    @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "evento-form-label" })
                </td>
                <td>
                    @Html.TextAreaFor(model => model.Descripcion, 4, 50, new { @class = "evento-form-control", placeholder = "Descripción del evento..." })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.FechaEvento, htmlAttributes: new { @class = "evento-form-label" })
                </td>
                <td>
                    @Html.EditorFor(model => model.FechaEvento, new { htmlAttributes = new { @class = "evento-form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.FechaEvento, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.HoraInicio, htmlAttributes: new { @class = "evento-form-label" })
                </td>
                <td>
                    @Html.EditorFor(model => model.HoraInicio, new { htmlAttributes = new { @class = "evento-form-control", type = "time" } })
                    @Html.ValidationMessageFor(model => model.HoraInicio, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.HoraFin, htmlAttributes: new { @class = "evento-form-label" })
                </td>
                <td>
                    @Html.EditorFor(model => model.HoraFin, new { htmlAttributes = new { @class = "evento-form-control", type = "time" } })
                    @Html.ValidationMessageFor(model => model.HoraFin, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Lugar, htmlAttributes: new { @class = "evento-form-label" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Lugar, new { htmlAttributes = new { @class = "evento-form-control", placeholder = "Lugar del evento" } })
                    @Html.ValidationMessageFor(model => model.Lugar, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "evento-form-label" })
                </td>
                <td style="display:flex;align-items:center;gap:0.5rem;">
                    @Html.EditorFor(model => model.Estado)
                    <span style="color:#7c7474;font-weight:600;">Activo</span>
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
        <button type="submit" class="btn-crear-evento"><i class="fas fa-plus"></i> Crear</button>
    }
    <br />
    <a href="@Url.Action("Index", "Eventos")" class="back-link" style="color:#ae3b62;font-weight:600;text-decoration:none;">
        <i class="fas fa-arrow-left"></i> Volver a la lista
    </a>
</div>
