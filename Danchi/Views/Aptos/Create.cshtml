@model Danchi.Models.Apto

@{
    ViewBag.Title = "Nuevo Apartamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .apto-form-container {
        max-width: 570px;
        margin: 2.7rem auto 0 auto;
        background: #fff;
        border-radius: 1.2rem;
        box-shadow: 0 6px 30px #ebb3b370, 0 2px 14px #f8b6b938;
        padding: 2.5rem 2.2rem 2rem 2.2rem;
    }

    .apto-form-title {
        color: #ce466d;
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 1.3rem;
        text-align: center;
        letter-spacing: 0.01em;
    }

    .apto-form-group {
        margin-bottom: 1.5rem;
    }

    .apto-form-label {
        font-weight: 600;
        color: #b17588;
        margin-bottom: .38rem;
        display: block;
        font-size: 1.07rem;
        letter-spacing: .01em;
    }

    .apto-form-control {
        border-radius: 1.05rem !important;
        border: 1.5px solid #ead8e4 !important;
        font-size: 1.08rem;
        padding: 0.85rem 1.2rem !important;
        background: #f9f8f8 !important;
        color: #7c7474;
        width: 100%;
        transition: border-color .17s;
    }

        .apto-form-control:focus {
            border-color: #ffb6b9 !important;
            background: #fff !important;
            box-shadow: 0 2px 10px #ffb6b938;
        }

    .apto-form-btns {
        text-align: right;
    }

    .btn-apto-guardar {
        background: linear-gradient(45deg, #ff7b9b 60%, #ebb3b3 100%);
        color: #fff;
        font-weight: 700;
        padding: 0.73rem 2.1rem;
        border-radius: 1.12rem;
        border: none;
        font-size: 1.07rem;
        box-shadow: 0 2px 9px #ffb6b933;
        margin-top: 1rem;
        margin-bottom: 1rem;
        transition: background 0.2s;
    }

        .btn-apto-guardar:hover {
            background: linear-gradient(45deg, #ce466d 60%, #ebb3b3 100%);
            color: #fff;
        }

    .apto-back-link {
        color: #ae3b62;
        font-weight: 600;
        text-decoration: none;
        margin-top: 1.5rem;
        display: inline-block;
        transition: color .15s;
    }

        .apto-back-link:hover {
            color: #ff7b9b;
            text-decoration: underline;
        }
</style>

<div class="apto-form-container">
    <div class="apto-form-title">Nuevo Apartamento</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="apto-form-group">
            <label class="apto-form-label" for="NombreApto">Nombre o Distinción Apto</label>
            @Html.TextBoxFor(model => model.NombreApto, new { @class = "apto-form-control", placeholder = "Ej: Apto 203" })
            @Html.ValidationMessageFor(model => model.NombreApto, "", new { @class = "text-danger" })
        </div>

        <div class="apto-form-group">
            <label class="apto-form-label" for="IdTorre">Torre</label>
            @Html.DropDownListFor(model => model.IdTorre, (IEnumerable<SelectListItem>)ViewBag.IdTorre, "-- Selecciona una Torre --", new { @class = "apto-form-control" })
            @Html.ValidationMessageFor(model => model.IdTorre, "", new { @class = "text-danger" })
        </div>

        <div class="apto-form-btns">
            <button type="submit" class="btn-apto-guardar">
                <i class="fas fa-save"></i> Guardar
            </button>
        </div>
    }
    <a href="@Url.Action("Index")" class="apto-back-link"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
</div>
