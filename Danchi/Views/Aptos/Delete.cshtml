@model Danchi.Models.Apto

@{
    ViewBag.Title = "Eliminar Apartamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .apto-delete-container {
        max-width: 570px;
        margin: 2.7rem auto 0 auto;
        background: #fff;
        border-radius: 1.2rem;
        box-shadow: 0 6px 30px #ebb3b370, 0 2px 14px #f8b6b938;
        padding: 2.5rem 2.2rem 2rem 2.2rem;
        text-align: left;
    }

    .apto-delete-title {
        color: #ce466d;
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 0.8rem;
        letter-spacing: 0.01em;
        text-align: center;
    }

    .apto-delete-sub {
        color: #8a6d6d;
        font-size: 1.11rem;
        text-align: center;
        margin-bottom: 2.1rem;
    }

    .apto-delete-info dt {
        font-weight: 700;
        color: #b17588;
        margin-bottom: 0.1rem;
        font-size: 1.06rem;
    }

    .apto-delete-info dd {
        margin-bottom: 1rem;
        color: #6d5959;
        font-size: 1.01rem;
        margin-left: 0;
    }

    .apto-delete-btns {
        margin-top: 2.1rem;
        display: flex;
        gap: 1.2rem;
        justify-content: flex-end;
    }

    .btn-apto-delete {
        background: linear-gradient(45deg, #ff7b9b 60%, #ebb3b3 100%);
        color: #fff;
        font-weight: 700;
        padding: 0.73rem 2.1rem;
        border-radius: 1.12rem;
        border: none;
        font-size: 1.07rem;
        box-shadow: 0 2px 9px #ffb6b933;
        transition: background 0.2s;
    }

        .btn-apto-delete:hover {
            background: linear-gradient(45deg, #ce466d 60%, #ebb3b3 100%);
            color: #fff;
        }

    .apto-back-link {
        color: #ae3b62;
        font-weight: 600;
        text-decoration: none;
        margin-top: 1.5rem;
        display: inline-block;
        transition: color .15s;
        align-self: center;
    }

        .apto-back-link:hover {
            color: #ff7b9b;
            text-decoration: underline;
        }
</style>

<div class="apto-delete-container">
    <div class="apto-delete-title">Eliminar Apartamento</div>
    <div class="apto-delete-sub">¿Estás seguro que deseas eliminar este apartamento?</div>

    <dl class="dl-horizontal apto-delete-info">
        <dt>@Html.DisplayNameFor(model => model.Torre.NombreTorre)</dt>
        <dd>@Html.DisplayFor(model => model.Torre.NombreTorre)</dd>

        <dt>@Html.DisplayNameFor(model => model.NombreApto)</dt>
        <dd>@Html.DisplayFor(model => model.NombreApto)</dd>

        <dt>@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
        <dd>@Html.DisplayFor(model => model.FechaCreacion)</dd>

        <dt>@Html.DisplayNameFor(model => model.UsuarioCreacion)</dt>
        <dd>@Html.DisplayFor(model => model.UsuarioCreacion)</dd>

        <dt>@Html.DisplayNameFor(model => model.FechaModificacion)</dt>
        <dd>@Html.DisplayFor(model => model.FechaModificacion)</dd>

        <dt>@Html.DisplayNameFor(model => model.UsuarioModificacion)</dt>
        <dd>@Html.DisplayFor(model => model.UsuarioModificacion)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="apto-delete-btns">
            <button type="submit" class="btn-apto-delete"><i class="fas fa-trash"></i> Eliminar</button>
            <a href="@Url.Action("Index")" class="apto-back-link"><i class="fas fa-arrow-left"></i> Cancelar</a>
        </div>
    }
</div>
