@model Danchi.Models.Reserva

@{
    ViewBag.Title = "Eliminar Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
.delete-container {
    max-width: 550px;
    margin: 2.6rem auto 0 auto;
    background: #fff;
    border-radius: 1.1rem;
    box-shadow: 0 8px 32px #ffb6b933, 0 2px 12px #ae3b6222;
    padding: 2.3rem 2.1rem 1.7rem 2.1rem;
    position: relative;
    z-index: 2;
    text-align: center;
}
.delete-title {
    font-weight: 800;
    font-size: 2rem;
    color: #ae3b62;
    margin-bottom: .6rem;
    letter-spacing: 0.01em;
}
.delete-warning {
    color: #d8004d;
    font-size: 1.12rem;
    font-weight: 700;
    margin-bottom: 2rem;
}
.reserva-info-list dt {
    color: #ae3b62;
    font-weight: 700;
    font-size: 1.06rem;
    margin-bottom: 0;
}
.reserva-info-list dd {
    color: #7c7474;
    margin-bottom: .7rem;
    font-size: 1.04rem;
}
.btn-eliminar {
    background: linear-gradient(45deg, #ff7b9b 60%, #ffb6b9 100%);
    color: #fff;
    font-weight: 700;
    padding: 0.7rem 2.2rem;
    border-radius: 1.1rem;
    border: none;
    font-size: 1.04rem;
    margin-right: 1rem;
    box-shadow: 0 2px 9px #ffb6b933;
    transition: background 0.18s, box-shadow 0.18s;
}
.btn-eliminar:hover {
    background: linear-gradient(45deg, #ae3b62 60%, #ffb6b9 100%);
    color: #fff;
}
.back-link {
    color: #ae3b62;
    font-weight: 600;
    text-decoration: none;
    margin-left: 1rem;
    transition: color .18s;
}
.back-link:hover {
    color: #ff7b9b;
    text-decoration: underline;
}
@@media (max-width: 700px) {
    .delete-container { padding: 1.2rem 0.3rem; }
    .delete-title { font-size: 1.3rem;}
}
</style>

<div class="delete-container">
    <div class="delete-title"><i class="fas fa-trash-alt"></i> Eliminar Reserva</div>
    <div class="delete-warning">
        ¿Estás seguro que deseas eliminar esta reserva?
    </div>
    <dl class="reserva-info-list text-start" style="margin:0 auto 1.5rem auto; max-width:420px;">
        <dt>Nombres</dt>
        <dd>@Model.Usuario.Nombres @Model.Usuario.Apellidos</dd>
        <dt>Zona</dt>
        <dd>@Model.Zona</dd>
        <dt>Fecha de Reserva</dt>
        <dd>@Model.FechaReserva.ToString("dd/MM/yyyy")</dd>
        <dt>Hora de Inicio</dt>
        <dd>@Model.HoraInicio</dd>
        <dt>Hora de Finalización</dt>
        <dd>@Model.HoraFin</dd>
        <dt>Número de Invitados</dt>
        <dd>@Model.NumInvitados</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn-eliminar"><i class="fas fa-trash"></i> Eliminar</button>
        <a href="@Url.Action("Index", "Reservas")" class="back-link"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
    }
</div>
