@model Danchi.Models.Reserva

@{
    ViewBag.Title = "Editar Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
.editar-reserva-container {
    max-width: 600px;
    margin: 2.7rem auto 0 auto;
    background: #fff;
    border-radius: 1.2rem;
    box-shadow: 0 8px 32px #ffb6b933, 0 2px 12px #ae3b6222;
    padding: 2.7rem 2.3rem 2.1rem 2.3rem;
    position: relative;
    z-index: 2;
}
.editar-reserva-title {
    font-weight: 800;
    font-size: 2.1rem;
    color: #7c7474;
    text-align: center;
    margin-bottom: 2rem;
    letter-spacing: 0.01em;
    text-shadow: 0 2px 10px #ffd3dc2e;
}
.editar-reserva-label {
    font-weight: 600;
    color: #ae3b62;
    margin-bottom: 0.18rem;
    font-size: 1.04rem;
}
.editar-reserva-input,
.editar-reserva-input[type="date"],
.editar-reserva-input[type="time"] {
    width: 100%;
    border-radius: 1rem;
    border: 1.5px solid #ffb6b9;
    background: #f9f8f8;
    font-size: 1.07rem;
    padding: 0.82rem 1.15rem;
    margin-bottom: 1.18rem;
    color: #7c7474;
    transition: border-color .2s, background .2s;
}
.editar-reserva-input:focus {
    border-color: #ae3b62;
    background: #fff;
    outline: none;
}
.btn-guardar-editar {
    background: linear-gradient(45deg, #ff7b9b 60%, #ffb6b9 100%);
    color: #fff;
    font-weight: 700;
    padding: 0.9rem 2.4rem;
    border-radius: 1.1rem;
    border: none;
    font-size: 1.11rem;
    box-shadow: 0 2px 9px #ffb6b933;
    transition: background 0.18s, box-shadow 0.18s;
}
.btn-guardar-editar:hover {
    background: linear-gradient(45deg, #ae3b62 60%, #ffb6b9 100%);
    color: #fff;
}
.back-link {
    color: #ae3b62;
    font-weight: 600;
    text-decoration: none;
    margin-top: 1.3rem;
    display: inline-block;
    transition: color .18s;
}
.back-link:hover {
    color: #ff7b9b;
    text-decoration: underline;
}
@@media (max-width: 700px) {
    .editar-reserva-container { padding: 1.4rem 0.5rem; }
    .editar-reserva-title { font-size: 1.3rem; }
}
</style>

<div class="editar-reserva-container">
    <div class="editar-reserva-title">Editar Reserva</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdReserva)

        <div class="form-group">
            <label class="editar-reserva-label" for="Zona">Zona</label>
            @Html.TextBoxFor(m => m.Zona, new { @class = "editar-reserva-input", required = "required" })
            @Html.ValidationMessageFor(model => model.Zona, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="editar-reserva-label" for="FechaReserva">Fecha de Reserva</label>
            @Html.TextBoxFor(m => m.FechaReserva, "{0:yyyy-MM-dd}", new { @class = "editar-reserva-input", type = "date", required = "required" })
            @Html.ValidationMessageFor(model => model.FechaReserva, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="editar-reserva-label" for="HoraInicio">Hora de Inicio</label>
            @Html.TextBoxFor(m => m.HoraInicio, new { @class = "editar-reserva-input", type = "time", required = "required" })
            @Html.ValidationMessageFor(model => model.HoraInicio, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="editar-reserva-label" for="HoraFin">Hora de Finalización</label>
            @Html.TextBoxFor(m => m.HoraFin, new { @class = "editar-reserva-input", type = "time", required = "required" })
            @Html.ValidationMessageFor(model => model.HoraFin, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="editar-reserva-label" for="NumInvitados">Número de Invitados</label>
            @Html.TextBoxFor(m => m.NumInvitados, new { @class = "editar-reserva-input", type = "number", min = "1", required = "required" })
            @Html.ValidationMessageFor(model => model.NumInvitados, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn-guardar-editar"><i class="fas fa-save"></i> Guardar Cambios</button>
        </div>
    }
    <div class="text-center">
        <a href="@Url.Action("Index", "Reservas")" class="back-link"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
    </div>
</div>
