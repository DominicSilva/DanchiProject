@model IEnumerable<Danchi.Models.Propietario>

@{
    ViewBag.Title = "Propietarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: '¡Éxito!',
            text: @Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["SuccessMessage"].ToString(), true)),
            confirmButtonText: 'Aceptar',
            timer: 3000
        });
    </script>
}

<div class="text-center">
    <h2>Propietarios</h2>
</div>

<div class="d-flex justify-content-between mb-3">
    <div>
        @Html.ActionLink("Nuevo Propietario", "Create", null, new { @class = "btn btn-primary" })
    </div>
    @if (Danchi.Utils.SessionHelper.Rol == "Administrador")
    {
        <div>
            @Html.ActionLink("Exportar a PDF", "ExportarEventosPDF", "Propietarios", null, new { @class = "btn btn-danger" })
        </div>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Apto.NombreApto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdTipoDocumento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroDocumento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apto.NombreApto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdPropietario })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.IdPropietario })
            </td>
        </tr>
    }

</table>
