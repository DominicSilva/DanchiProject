@model Danchi.Models.Propietario

@{
    ViewBag.Title = "Eliminar Propietario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .delete-container {
        max-width: 540px;
        margin: 3.2rem auto 2.5rem auto;
        background: #fff;
        border-radius: 1.35rem;
        box-shadow: 0 6px 26px #ebb3b370, 0 2px 14px #f8b6b938;
        padding: 2.3rem 2rem 2.5rem 2rem;
        text-align: left;
    }

    .delete-title {
        color: #8a6d6d;
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: .5rem;
        text-align: left;
    }

    .delete-sub {
        color: #9c7171;
        font-size: 1.18rem;
        margin-bottom: 1.6rem;
        font-weight: 500;
    }

    .delete-details {
        margin-bottom: 1.9rem;
    }

        .delete-details dt {
            color: #ae3b62;
            font-weight: 800;
            margin-bottom: 0.2rem;
            font-size: 1.02rem;
        }

        .delete-details dd {
            margin-bottom: .8rem;
            font-size: 1.07rem;
            color: #695a5a;
            margin-left: 0;
        }

    .delete-btns {
        display: flex;
        gap: 1rem;
        align-items: center;
        margin-top: 1.2rem;
    }

    .btn-delete {
        background: linear-gradient(45deg, #ff7b9b 60%, #ebb3b3 100%);
        color: #fff !important;
        font-weight: 700;
        border-radius: 1.13rem;
        border: none;
        padding: 0.7rem 2.2rem;
        font-size: 1.11rem;
        box-shadow: 0 1.5px 10px #ffb6b933;
        transition: background 0.2s;
    }

        .btn-delete:hover {
            background: linear-gradient(45deg, #ce466d 60%, #ebb3b3 100%);
        }

    .cancel-link {
        color: #ce466d !important;
        font-weight: 700;
        text-decoration: none;
        font-size: 1.09rem;
        margin-left: .2rem;
    }

        .cancel-link:hover {
            text-decoration: underline;
            color: #8a6d6d !important;
        }
</style>

<div class="delete-container">
    <div class="delete-title">Eliminar Propietario</div>
    <div class="delete-sub">¿Estás seguro que deseas eliminar este propietario?</div>
    <dl class="delete-details">
        <dt>@Html.DisplayNameFor(model => model.Apto.NombreApto)</dt>
        <dd>@Html.DisplayFor(model => model.Apto.NombreApto)</dd>
        <dt>@Html.DisplayNameFor(model => model.IdTipoDocumento)</dt>
        <dd>@Html.DisplayFor(model => model.IdTipoDocumento)</dd>
        <dt>@Html.DisplayNameFor(model => model.NumeroDocumento)</dt>
        <dd>@Html.DisplayFor(model => model.NumeroDocumento)</dd>
        <dt>@Html.DisplayNameFor(model => model.Apellidos)</dt>
        <dd>@Html.DisplayFor(model => model.Apellidos)</dd>
        <dt>@Html.DisplayNameFor(model => model.Nombres)</dt>
        <dd>@Html.DisplayFor(model => model.Nombres)</dd>
        <dt>@Html.DisplayNameFor(model => model.Correo)</dt>
        <dd>@Html.DisplayFor(model => model.Correo)</dd>
        <dt>@Html.DisplayNameFor(model => model.Telefono)</dt>
        <dd>@Html.DisplayFor(model => model.Telefono)</dd>
        <dt>@Html.DisplayNameFor(model => model.Celular)</dt>
        <dd>@Html.DisplayFor(model => model.Celular)</dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="delete-btns">
            <input type="submit" value="Eliminar" class="btn-delete" />
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "cancel-link" })
        </div>
    }
</div>
