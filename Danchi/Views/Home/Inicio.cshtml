@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Inicio - Danchi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .carousel-item {
            height: 100vh;
        }

            .carousel-item img {
                object-fit: cover;
                height: 100%;
                width: 100%;
            }

        .carousel-caption {
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 12px;
            padding: 20px;
        }

        .btn-login {
            background-color: #28a745;
            border: none;
            color: white;
        }

            .btn-login:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>

    <div id="residentialCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#residentialCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#residentialCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#residentialCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1570129477492-45c003edd2be?auto=format&fit=crop&w=1600&q=80" class="d-block w-100" alt="Conjunto 1">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Bienvenido a Danchi</h1>
                    <p>Mejora la convivencia y gestión de tu conjunto residencial.</p>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-login">Iniciar Sesión</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=1600&q=80" class="d-block w-100" alt="Comunidad 2">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Comunicación Eficiente</h1>
                    <p>Envía avisos y solicitudes a la administración sin complicaciones.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1570129477492-45c003edd2be?auto=format&fit=crop&w=1600&q=80" class="d-block w-100" alt="Comunidad 3">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Gestión Transparente</h1>
                    <p>Consulta documentos, reuniones y votaciones desde tu hogar.</p>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#residentialCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#residentialCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

</body>
</html>
