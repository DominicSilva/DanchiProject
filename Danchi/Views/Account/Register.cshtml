@model Danchi.Models.Usuario

@{
    ViewBag.Title = "Registrar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
.user-register-container {
    max-width: 580px;
    margin: 2.5rem auto;
    background: #fff;
    border-radius: 1.5rem;
    box-shadow: 0 8px 36px #b9b6ec33, 0 2px 18px #7bafd633;
    padding: 2.1rem 1.6rem 1.5rem 1.6rem;
    display: flex;
    flex-direction: column;
    gap: 1.1rem;
}
.user-register-title {
    color: #33203b;
    font-size: 2rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 1.2rem;
    letter-spacing: 0.01em;
}
.user-form-group {
    display: flex;
    flex-direction: column;
    gap: 0.38rem;
    margin-bottom: 0.5rem;
}
.user-form-label {
    font-weight: 600;
    color: #6a11cb;
    font-size: 1rem;
    margin-bottom: 0.09rem;
    letter-spacing: 0.01em;
}
.user-form-control, select {
    border-radius: 0.9rem !important;
    border: 1.5px solid #d7def9 !important;
    font-size: 1.09rem;
    padding: 0.7rem 1rem !important;
    background: #f9faff !important;
    color: #333;
    width: 100%;
    transition: box-shadow .2s, border .2s;
}
.user-form-control:focus, select:focus {
    border-color: #7bafd6 !important;
    background: #fff !important;
    box-shadow: 0 2px 12px #7bafd634;
}
.btn-crear-usuario {
    background: linear-gradient(90deg, #6a11cb 20%, #2575fc 100%);
    color: #fff;
    font-weight: 700;
    padding: 0.85rem 0;
    border-radius: 1rem;
    border: none;
    font-size: 1.13rem;
    box-shadow: 0 2px 10px #7bafd633;
    width: 100%;
    margin-top: 0.9rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: .7rem;
    transition: background 0.18s;
}
.btn-crear-usuario:hover {
    background: linear-gradient(90deg, #2575fc 60%, #6a11cb 100%);
    color: #fff;
}
.back-link {
    color: #6a11cb;
    font-weight: 600;
    text-decoration: none;
    margin-top: 1.2rem;
    display: inline-block;
}
.back-link:hover {
    color: #2575fc;
    text-decoration: underline;
}
@@media (max-width: 700px) {
    .user-register-container { padding: 1.2rem 0.6rem; }
    .user-register-title { font-size: 1.23rem;}
}
</style>

<div class="user-register-container">
    <div class="user-register-title">Registrar Usuario</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="user-form-group">
            @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "user-form-label" })
            @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "user-form-control", placeholder = "Nombres..." } })
            @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
        </div>
        <div class="user-form-group">
            @Html.LabelFor(model => model.Apellidos, htmlAttributes: new { @class = "user-form-label" })
            @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "user-form-control", placeholder = "Apellidos..." } })
            @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
        </div>
        <div class="user-form-group">
            @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "user-form-label" })
            @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "user-form-control", placeholder = "Correo..." } })
            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
        </div>
        <div class="user-form-group">
            @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "user-form-label" })
            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "user-form-control", placeholder = "Teléfono o Celular..." } })
            @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
        </div>
        <div class="user-form-group">
            @Html.LabelFor(model => model.IdRol, htmlAttributes: new { @class = "user-form-label" })
            @Html.DropDownListFor(model => model.IdRol, (IEnumerable<SelectListItem>)ViewBag.Rol, "-- Selecciona un Rol --", new { @class = "user-form-control" })
            @Html.ValidationMessageFor(model => model.IdRol, "", new { @class = "text-danger" })
        </div>
        <div class="user-form-group">
            @Html.LabelFor(model => model.Contrasena, htmlAttributes: new { @class = "user-form-label" })
            @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "user-form-control", placeholder = "Contraseña..." } })
            @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn-crear-usuario">
            <i class="fas fa-user-plus"></i> Registrar
        </button>
    }
    <a href="@Url.Action("Index", "Usuarios")" class="back-link">
        <i class="fas fa-arrow-left"></i> Volver a la lista
    </a>
</div>
