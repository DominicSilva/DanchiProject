@model Danchi.Models.Aviso

@{
    ViewBag.Title = "Crear Aviso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
.aviso-form-container {
    max-width: 650px;
    margin: 2.8rem auto 0 auto;
    background: #fff;
    border-radius: 1.15rem;
    box-shadow: 0 8px 32px #b9b6ec1a, 0 2px 12px #ffb6b928;
    padding: 2.2rem 2rem 2rem 2rem;
}
.aviso-form-title {
    color: #7c7474;
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 2rem;
    letter-spacing: 0.01em;
    text-align: left;
}
.aviso-form-group {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    margin-bottom: 1.2rem;
}
.aviso-form-label {
    font-weight: 600;
    color: #ae3b62;
    margin-bottom: 0.28rem;
    letter-spacing: 0.01em;
    font-size: 1.05rem;
}
.aviso-form-control, textarea {
    width: 100% !important;
    min-width: 100%;
    max-width: 100%;
    border-radius: 1.05rem !important;
    border: 1.5px solid #ead8e4 !important;
    font-size: 1.07rem;
    padding: 0.9rem 1.2rem !important;
    background: #f9f8f8 !important;
    margin-bottom: 0.4rem;
    color: #7c7474;
    box-sizing: border-box;
}
.aviso-form-control:focus, textarea:focus {
    border-color: #ffb6b9 !important;
    background: #fff !important;
    box-shadow: 0 2px 10px #ffb6b938;
}
.btn-crear-aviso {
    background: linear-gradient(45deg, #ff7b9b 60%, #ffb6b9 100%);
    color: #fff;
    font-weight: 700;
    padding: 0.75rem 2.2rem;
    border-radius: 1.15rem;
    border: none;
    font-size: 1.09rem;
    box-shadow: 0 2px 9px #ffb6b933;
    transition: background 0.18s, box-shadow 0.18s;
}
.btn-crear-aviso:hover {
    background: linear-gradient(45deg, #ae3b62 60%, #ffb6b9 100%);
    color: #fff;
}
@@media (max-width: 700px) {
    .aviso-form-container { padding: 1.2rem 0.5rem; }
    .aviso-form-title { font-size: 1.28rem;}
}
</style>

<div class="aviso-form-container">
    <div class="aviso-form-title">Crear Aviso</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="aviso-form-group">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "aviso-form-label" })
            @Html.TextBoxFor(model => model.Titulo, new { @class = "aviso-form-control", placeholder = "Título del aviso" })
            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
        </div>

        <div class="aviso-form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "aviso-form-label" })
            @Html.TextAreaFor(model => model.Descripcion, 5, 50, new { @class = "aviso-form-control", placeholder = "Descripción del aviso..." })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>

        <div class="aviso-form-group" style="margin-bottom:1.4rem;">
            <label style="display:flex;align-items:center;gap:.55rem;">
                @Html.EditorFor(model => model.Estado)
                <span class="aviso-form-label" style="margin-bottom:0;">@Html.DisplayNameFor(model => model.Estado)</span>
            </label>
            @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn-crear-aviso"><i class="fas fa-plus"></i> Crear</button>
    }
    <br />
    <a href="@Url.Action("Index", "Avisos")" class="back-link" style="color:#ae3b62;font-weight:600;text-decoration:none;">
        <i class="fas fa-arrow-left"></i> Volver a la lista
    </a>
</div>

