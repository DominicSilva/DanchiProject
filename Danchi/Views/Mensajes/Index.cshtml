@model Danchi.Models.BandejaViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: '¡Éxito!',
            text: @Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["SuccessMessage"].ToString(), true)),
            confirmButtonText: 'Aceptar',
            timer: 3000
        });
    </script>
}

<h2>Bandeja de Mensajes</h2>

<div class="mb-3">
    <a href="@Url.Action("Create", "Mensajes")" class="btn btn-success">
        <i class="fas fa-paper-plane"></i> Nuevo Mensaje
    </a>
</div>

<ul class="nav nav-tabs" id="mensajeTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="recibidos-tab" data-bs-toggle="tab" data-bs-target="#recibidos" type="button" role="tab">
            Recibidos
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="enviados-tab" data-bs-toggle="tab" data-bs-target="#enviados" type="button" role="tab">
            Enviados
        </button>
    </li>
</ul>

<div class="tab-content mt-3" id="mensajeTabsContent">

    <!-- Recibidos -->
    <div class="tab-pane fade show active" id="recibidos" role="tabpanel">
        @if (Model.Recibidos != null && Model.Recibidos.Any())
        {
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>De</th>
                        <th>Asunto</th>
                        <th>Fecha</th>
                        <th>Leído</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var msg in Model.Recibidos)
                    {
                        <tr>
                            <td>@(msg.Emisor.Nombres + ' ' + msg.Emisor.Apellidos) </td>
                            <td>@msg.Asunto</td>
                            <td>@msg.FechaEnvio.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (msg.Leido)
                                {
                                    <span class="text-success"><i class="fas fa-check-circle"></i> Leído</span>
                                }
                                else
                                {
                                    <span class="text-muted"><i class="fas fa-envelope"></i> No leído</span>
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Ver", "Details", new { id = msg.IdMensaje }, new { @class = "btn btn-sm btn-primary me-2" })
                                @Html.ActionLink("Responder", "Reply", new { id = msg.IdMensaje }, new { @class = "btn btn-sm btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">No tienes mensajes recibidos.</div>
        }
    </div>

    <!-- Enviados -->
    <div class="tab-pane fade" id="enviados" role="tabpanel">
        @if (Model.Enviados != null && Model.Enviados.Any())
        {
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Para</th>
                        <th>Asunto</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var msg in Model.Enviados)
                    {
                        <tr>
                            <td>@(msg.Receptor.Nombres + ' ' + msg.Receptor.Apellidos) </td>
                            <td>@msg.Asunto</td>
                            <td>@msg.FechaEnvio.ToString("dd/MM/yyyy")</td>
                            <td>
                                @Html.ActionLink("Ver", "Details", new { id = msg.IdMensaje }, new { @class = "btn btn-sm btn-secondary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">No has enviado mensajes.</div>
        }
    </div>
</div>

